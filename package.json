{
  "name": "game1",
  "type": "module",
  "scripts": {
    "dev": "tsr generate && vite",
    "build": "vite build --mode client --mode production && vite build",
    "migrate": "prisma migrate diff --from-empty --to-schema-datamodel ./prisma/schema.prisma --script --output",
    "migration:dev": "wrangler d1 migrations apply game1-db --local",
    "migration:prod": "wrangler d1 migrations apply game1-db --remote",
    "generate": "prisma generate",
    "preview": "wrangler pages dev",
    "deploy": "pnpm run build && wrangler pages deploy"
  },
  "dependencies": {
