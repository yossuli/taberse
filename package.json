    "@tanstack/router-devtools": "^1.109.2",
    "hono": "^4.7.2",
    "honox": "^0.1.34",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241218.0",
